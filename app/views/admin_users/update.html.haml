= form_for(:table, :url=>{:action=>'index'}) do |f|
  %table#candidates_table.display
    %thead
      %tr
        %th
          First 
          %br
          Name
        %th
          Middle
          %br
          Name
        %th
          First 
          %br
          Last
          %br
          Name
        %th
          Second 
          %br
          Last 
          %br
          Name
        / %th
        /   Roles
        %th
          E-Mail
        %th
          Enabled
    %tbody 
      -@candidates.each do |row|
        %tr
          %td
            = link_to row.candidate.first_name, "/candidates/#{row.id}/resume"
          %td
            = link_to row.candidate.middle_name, "/candidates/#{row.id}/resume"
          %td
            = link_to row.candidate.first_last_name, "/candidates/#{row.id}/resume"
          %td
            = link_to row.candidate.second_last_name, "/candidates/#{row.id}/resume"
          / %td
          /   - if row.projects.count > 0
          /     - row.projects.each do |projects|
          /       - if projects.projects_roles.count > 0
          /         - projects.projects_roles.each do |project_roles|
          /           - if project_roles.tags3.count > 0
          /             - project_roles.tags3.each do |project_tag|
          /               = Tag.find(project_tag.tags_id).name + " - "
          %td
            = row.candidate.email
          %td
            = link_to_function (row.is_active ? "yes": "no"), "updateValue('/admin_users/#{row.id}/edit',2)"