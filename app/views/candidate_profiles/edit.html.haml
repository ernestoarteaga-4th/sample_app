<!-- Content -->
#content
  %img(src="http://www.4thsource.com//public/images/subheader_services.jpg" alt="Sub Header" class="subheader")
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume("My profile", @candidate.id, :action => "resume")
      = raw '&raquo;'
    %li
      = link_to_resume("Candidate Profile", @candidate.id, :action => "candidate_profiles")
      = raw '&raquo;'
    %li= raw('<em>Edit</em>')
    .clear
  %h3.page_headline
    %i.iconExperience
    .h3-page-headline
      Edit Candidate Profile
  .divider

  = form_for :candidate_profile, :url=>{:action=>'edit'} do |f|
    .row-fluid
      .field
        = f.label :name
        %br
        = f.text_field :name
    .row-fluid
      .field.width100percent
        = f.label :summary
        %br
        = f.text_area :summary, {"class"=>"width100percent"}
    .actions
      %br
      = f.submit "Update",{"class"=>"btn btn-primary"}

  %h4
    Please Select Your Project Tags:

  = form_for(:project_tags, :url=>{:action=>'index'}, :html => {:multipart => true, :id => "EducationDegreeTableForm"}) do |f|
    %table#candidates_search_table.display
      %thead
        %tr
          %th
            Selection
          %th
            Project Name
          %th
            Summary
          %th
            Company Name
          %th
            Project Tag Description
      %tbody
        -@total_projects.each do |row|
          -row.projects_roles.each do |project_roles|
            -project_roles.projects_tags.each do |projects_tags|
              %tr
                %td
                  = check_box_tag "id" , row.id.to_s(), row.id, :name => "approved_flag", :class => "id"
                %td
                  = row.name
                %td
                  = row.summary
                %td 
                  = row.company_name
                %td
                  = projects_tags.description
    %br
    = submit_tag "Update", :name => 'update_button', :class => 'btn-primary'
    &nbsp;&nbsp;&nbsp;&nbsp;

<!-- Sidebar -->
= render 'shared/sidebar_signed'    
