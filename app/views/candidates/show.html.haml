<!-- Content -->
#content
  %img(src="http://www.4thsource.com//public/images/subheader_services.jpg" alt="Sub Header" class="subheader")
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path
      = raw '&raquo;'
    %li
      = raw '<em>'
      = @candidate.name
      = raw '</em>'
    .clear
  %h3.page_headline
    = gravatar_for @candidate, :size => 30
    = @candidate.name
  .divider
  #content-show
    %br
    #flash
      - flash.each do |key, value|
        .flash{:class => key}= value
    - if followed_in? @candidate
      - if is_follow? @candidate
        = render 'unfollow'
      - else
        = render 'follow'
    - else
      %h2.page_headline
        My current posts:
  %br
  -# unless @candidate.microposts.empty?
    %table{:class => "microposts"}
      = render @microposts
    #feed-pagination
      = will_paginate @microposts
  .clear
#sidebar
  %h4#if_sub_nav
    = link_to 'User Information', '#'
  #if_subnav.divider
  %strong
    Name
  = @candidate.name
  %br
  %strong
    URL
  = link_to candidates_path(@candidate), @candidate
  %br
  %strong
    Microposts
  -#= @candidate.microposts.count
  %br
  %br
  %br
  %strong
    Following
  -#= link_to @candidate.following.count, following_user_path(@candidate)
  %br
  %strong
    Followers
  -#= link_to @candidate.followers.count, followers_user_path(@candidate)
  %br
  %br
  %ul#nav_sub.sub_navigation
    %li= link_to 'Microsoft Solutions', '#'
    %li= link_to 'Custom Mobile Software & Smartphone Development', '#'
    %li= link_to 'Application Maintenance Outsourcing', '#'
    %li= link_to 'Sharepoint, Portals & CMS', '#'
    %li= link_to 'Custom Application Development', '#'
    %li= link_to 'Quality Assurance & Testing', '#'
    %li= link_to 'Strategic Guidance', '#'
    %li.last= link_to 'Nearshore Staff Augmentation', '#'
  %br
  .clear