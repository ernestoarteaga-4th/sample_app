<!-- Content -->			
#content
  - if !signed_in?
    %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume('Resume', current_candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li
      =link_to_resume("Experience", @candidate.id, :action => "experience")
      = raw '&raquo;'
    %li= raw('<em>new</em>')
    .clear
  %h3.page_headline 
    %i.iconExperienceHeadLine
    .h3-page-headline
      Experience
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  %br
  - form_for(:experience, :html => {:class => "experience"}) do |f|
    %h4
      Please enter the following information
    .divider
    %br  
    .field
      = f.label "Employer"
      %br
      = f.text_field :company_name
    .field
      = f.label :job_position
      %br 
      = f.text_field :job_position 
    .field
      = f.label :description
      %br
      %br
      = f.text_area :description
    .field
      = f.label :start_date
      %br 
      %br
      = date_select(:experience, :start_date, :start_year => 1950, :discard_day => true, :order => [:month, :year])
    .field
      = f.label :end_date
      %br
      %br 
      = date_select(:experience, :end_date, :start_year => 1950, :discard_day => true, :order => [:month, :year])
    .actions
      %br
      = f.submit "Sign in"
  .clear	
<!-- Sidebar -->
= render 'shared/sidebar_signed'