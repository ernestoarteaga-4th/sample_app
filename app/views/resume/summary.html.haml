<!-- Content -->		
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume('Resume', current_candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li= raw('<em>Summary</em>')
    .clear
  %h3.page_headline 
    %i.iconSummaryHeadLine
    .h3-page-headline
      Professional Summary
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  %br
  = link_to_resume('Back to Resume', @candidate.id, :action => 'resume')
  %br
  = form_for(:candidate_prof_summary, :controller => "resume", :action => "summary", :html => {:id => "summaryForm"}) do |f|     
    .field.width100percent
      = f.label "Summary"
      %br
      %br
      = f.text_area :summary
    .actions
      %br
      = f.submit "Update",{"class"=>"btn btn-primary"}
  .clear  
<!-- Sidebar -->
-if !current_candidate.admin_flag.nil?
  = render 'shared/admin_sidebar_signed'
-else
  = render 'shared/sidebar_signed'
