%tr.feed-content
  - admin_candidate = Candidate.find(feed_item.created_by)
  %td.gravatar
    = link_to gravatar_for(admin_candidate), admin_candidate 
  %td.micropost 
    %span(class='candidate')
      = link_to admin_candidate.first_name, admin_candidate 
    %span(class='content')
      = feed_item.content
    %span(class='timestamp')
      Posted 
      = time_ago_in_words(feed_item.created_at)
      ago.
  - if current_candidate?(feed_item.candidate) 
    %td.micropost-delete
      - @value = "/reply/#{feed_item.created_by}"
      = label_tag :reply, t("reply"), :id => "#{feed_item.created_by}", :class=>"show_hide", :rel=>"#slidingDiv2"
      - if (current_candidate.id == feed_item.created_by)
        = link_to "Remove", feed_item, :method => :update, :confirm => "You sure?", :title => feed_item.content


  
